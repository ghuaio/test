/**index.wxss**/
.top{
  padding-top:20rpx;
  margin-top:170rpx;
  height: 200rpx
}
.title{ 
  color: #fff;
  font-size: 24px;
  font-family: Microsoft YaHei;
  font-weight: 400;
  margin-top: 30rpx;
  position: relative;
}
.search{
  box-sizing: border-box;
  width: 100%;
  height: 32px;
  background:#fff;
  border-radius: 5px;
  vertical-align: middle;
  display: flex;
  align-items:Center;
  padding: 0 20rpx;
  box-shadow: 0 1px 10px 4px rgba(0,0,0,.06);
}
.search-ipt{
  display: inline-block;
  margin-left:20rpx;
  color: #505050;
}
.main{
  top: -80rpx;
  z-index: 1;
  box-sizing: border-box;
  margin-left: 20px;
  margin-right: 20px;
  position: relative;
  border-radius:8px;   
}
.order{
  padding:15px 10rpx;
  background:#fff;
  box-sizing: border-box;
  width: 100%;
  border-radius:5px;
  box-shadow: 0 1px 10px 4px rgba(0,0,0,.06);  
  margin-bottom: 30rpx;
}
.order-title{
  padding-left:15px;
  padding-right: 15px; 
  height: 65rpx;
  font-size: 14px;
  color: #505050;
  font-weight: 600;
  position: relative
}
.order-info{
  margin-top: 30rpx
}
.order-text{
  font-size: 20px;
  color: #FF7B31;
  text-align: center
}
.order-lable{
  font-size: 12px;
  color: #B0B0B0;
  text-align: center;
  margin-bottom:30rpx 
}
.order-tips{
  width: 55rpx;
  height: 26rpx;
  display: inline-block;
  background-repeat:no-repeat;
  background-size:100% 100%;
}
.jiantou{
  position: absolute;
  right: 20rpx;
  top:0;
  font-size:12px;
  font-weight: 300
}
.main-line{
  padding: 0 20rpx;
  display: flex;
  align-items:Center;
}
.main-lable{
  display: inline-block;
  font-size: 14px;
  color: #B0B0B0;
  width: 30%;
  line-height: 50rpx;
  height:100%
}
.main-text{
 font-size: 15px;
  display: inline-block;
  color: #383838;
  line-height: 50rpx;
  width: 70%;
}
.main-text-hl{
  color: #FF7B31;
  font-size: 14px;
}
.a-line{
  height: 100%;
  width: 1px;
  background-color: #e3e3e3;
  margin: 0 20rpx
}
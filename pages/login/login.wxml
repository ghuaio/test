<!--pages/login/login.wxml-->
<view class="page">
    <view class="page__hd weui-flex">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname weui-flex__item">{{userInfo.nickName}}</text>
    </view>
    <view class="page__bd page__bd_spacing">
        <button class="weui-btn" type="primary" open-type="getUserInfo" bind:tap="getUserInfo">微信登录</button>
        <button class="weui-btn" type="default" bindtap="selectSite">选择站点</button>
    </view>
</view>
